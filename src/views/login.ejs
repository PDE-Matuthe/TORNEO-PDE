<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="min-h-screen flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md">
    <!-- Login Card -->
    <div class="card shadow-lg">
      <div class="card-header">
        <h1 class="card-title text-center">
          <i class="fas fa-sign-in-alt text-gold mr-2"></i> Iniciar Sesión
        </h1>
        <p class="text-center text-slate-400 text-sm mt-2">Panel Administrativo - Torneo PDE</p>
      </div>

      <!-- Alerts -->
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-circle mr-2"></i> <%= error %>
        </div>
      <% } %>

      <!-- Login Form -->
      <form method="POST" action="/login" class="space-y-4">
        <div class="form-group">
          <label for="email">
            <i class="fas fa-envelope text-gold mr-2"></i> Email
          </label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            placeholder="admin@torneopde.com"
            class="w-full"
          >
        </div>

        <div class="form-group">
          <label for="password">
            <i class="fas fa-lock text-gold mr-2"></i> Contraseña
          </label>
          <div class="flex">
            <input 
              type="password" 
              id="password" 
              name="password" 
              required 
              placeholder="••••••••"
              class="w-full rounded-r-none"
            >
            <button 
              type="button" 
              id="togglePassword"
              class="bg-slate-700 hover:bg-slate-600 border border-l-0 border-slate-500 px-3 rounded-r transition"
            >
              <i class="fas fa-eye"></i>
            </button>
          </div>
        </div>

        <div class="flex items-center">
          <input 
            type="checkbox" 
            id="remember" 
            name="remember" 
            class="w-4 h-4 rounded"
          >
          <label for="remember" class="ml-2 text-sm text-slate-400">
            Recuérdame en este dispositivo
          </label>
        </div>

        <button type="submit" class="btn-primary w-full">
          <i class="fas fa-sign-in-alt mr-2"></i> Ingresar
        </button>
      </form>
    </div>

  </div>
</main>

<%- include('partials/footer') %>

<script>
  document.getElementById('togglePassword').addEventListener('click', function() {
    const passwordField = document.getElementById('password');
    const type = passwordField.type === 'password' ? 'text' : 'password';
    passwordField.type = type;
    this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
  });
</script>
