<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="hero-section">
  <div class="container">
    <h1>‚≠ê Ranking MVP</h1>
    <p class="lead">Los mejores jugadores del torneo seg√∫n su rendimiento</p>
  </div>
</div>

<div class="container mt-5 mb-5">
  <div class="card card-custom">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-dark table-hover mb-0 align-middle">
          <thead>
            <tr>
              <th style="width: 5%;">#</th>
              <th style="width: 25%;">Jugador</th>
              <th style="width: 12%;">Rol</th>
              <th style="width: 12%;">KDA Ratio</th>
              <th style="width: 18%;">K / D / A (Total)</th>
              <th style="width: 12%;">CS/min</th>
              <th style="width: 16%;">Dmg/min</th>
            </tr>
          </thead>
          <tbody>
            <% if (topPlayers.length > 0) { %>
              <% topPlayers.forEach((player, index) => { %>
                <tr>
                  <td class="fw-bold" style="color: var(--color-amarillo); font-size: 1.1rem;">
                    <%= index === 0 ? 'ü•á' : index === 1 ? 'ü•à' : index === 2 ? 'ü•â' : index + 1 %>
                  </td>
                  <td>
                    <div class="d-flex align-items-center">
                      <img src="<%= player.equipo_logo || 'https://via.placeholder.com/40' %>" 
                           class="rounded-circle me-2" style="width: 40px; height: 40px; border: 2px solid var(--color-amarillo);">
                      <div>
                        <span class="fw-bold d-block" style="color: var(--color-amarillo);"><%= player.nombre_invocador %></span>
                        <small style="color: var(--color-gris-claro);"><%= player.equipo %></small>
                      </div>
                    </div>
                  </td>
                  <td><span class="badge" style="background-color: var(--color-rojo-oscuro); color: var(--color-amarillo);"><%= player.rol_juego %></span></td>
                  <td class="fw-bold" style="color: var(--color-amarillo); font-size: 1.05rem;"><%= player.kda_ratio %></td>
                  <td><span style="color: var(--color-amarillo);"><%= player.total_kills %></span> / <span style="color: #ff6b6b;"><%= player.total_deaths %></span> / <span style="color: var(--color-amarillo);"><%= player.total_assists %></span></td>
                  <td style="color: var(--color-gris-claro);"><%= Number(player.avg_cs).toFixed(1) %></td>
                  <td style="color: var(--color-gris-claro);"><%= Number(player.avg_dmg).toFixed(0) %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="py-5 text-center" style="color: var(--color-gris-claro);">
                  <p style="font-size: 1.1rem;">A√∫n no hay estad√≠sticas registradas para generar el ranking.</p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>