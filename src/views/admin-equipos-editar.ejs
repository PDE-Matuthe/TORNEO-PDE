<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="max-w-6xl mx-auto px-4 py-12 space-y-12">

  <% if (locals.messages) { %>
    <% if (messages.success) { %>
      <div class="bg-green-600/20 border border-green-500 text-green-200 px-4 py-3 rounded-lg flex items-center shadow-lg">
        <i class="fas fa-check-circle text-xl mr-3"></i><span><%= messages.success %></span>
      </div>
    <% } %>
    <% if (messages.error) { %>
      <div class="bg-red-600/20 border border-red-500 text-red-200 px-4 py-3 rounded-lg flex items-center shadow-lg">
        <i class="fas fa-exclamation-circle text-xl mr-3"></i><span><%= messages.error %></span>
      </div>
    <% } %>
  <% } %>

  <div class="flex items-center gap-4">
    <a href="/admin/equipos" class="bg-slate-800 hover:bg-slate-700 text-slate-300 w-10 h-10 flex items-center justify-center rounded-full transition shadow-lg border border-slate-700">
      <i class="fas fa-arrow-left"></i>
    </a>
    <div>
      <h1 class="text-3xl font-bold text-white">Gestionar Equipo</h1>
      <p class="text-slate-400 text-sm">Detalles y alineación de <span class="text-yellow-500"><%= equipo.nombre %></span></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
    
    <div class="bg-slate-800 rounded-2xl shadow-2xl border border-slate-700 overflow-hidden">
      <div class="bg-slate-900 px-8 py-6 border-b border-slate-700 flex items-center gap-4">
        <div class="w-12 h-12 bg-blue-600/20 rounded-full flex items-center justify-center border border-blue-500/30 text-blue-500">
          <i class="fas fa-pen text-xl"></i>
        </div>
        <div>
          <h2 class="text-xl font-bold text-white">Identidad Visual</h2>
          <p class="text-slate-400 text-xs">Nombre, Tag y Logo</p>
        </div>
      </div>

      <form action="/admin/equipos/<%= equipo.id %>/update" method="POST" class="p-8 space-y-6">
        <div>
          <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Nombre</label>
          <input type="text" name="nombre" id="inputNombre" value="<%= equipo.nombre %>" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition placeholder-slate-600" required>
        </div>
        <div>
          <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Siglas</label>
          <input type="text" name="siglas" id="inputSiglas" value="<%= equipo.siglas %>" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition placeholder-slate-600 uppercase" maxlength="5" required>
        </div>
        <div>
          <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Logo URL</label>
          <input type="url" name="logo_url" id="inputLogo" value="<%= equipo.logo_url %>" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition placeholder-slate-600">
        </div>
        <div class="flex justify-end pt-4">
          <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition transform hover:-translate-y-0.5">
            <i class="fas fa-save mr-2"></i> Guardar Cambios
          </button>
        </div>
      </form>
    </div>

    <div class="flex flex-col gap-4 sticky top-24">
      <div class="flex items-center gap-3 px-2">
        <div class="h-px bg-slate-700 flex-1"></div>
        <span class="text-slate-500 text-xs font-bold uppercase tracking-widest">Vista Previa</span>
        <div class="h-px bg-slate-700 flex-1"></div>
      </div>
      <div class="relative w-full max-w-sm mx-auto h-80 group cursor-default">
        <div class="absolute inset-0 bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-600 transform -skew-x-6 rounded-xl shadow-2xl transition-all duration-300 group-hover:border-yellow-500 group-hover:shadow-[0_0_30px_rgba(234,179,8,0.2)]"></div>
        <div class="relative h-full flex flex-col items-center justify-center p-6 z-10">
          <div class="relative w-40 h-40 mb-4 transition-transform duration-300 group-hover:scale-105">
            <img id="previewImg" src="<%= equipo.logo_url || 'https://via.placeholder.com/150?text=No+Logo' %>" class="w-full h-full object-contain drop-shadow-lg filter grayscale group-hover:grayscale-0 transition-all duration-500">
          </div>
          <div class="text-center">
            <h2 id="previewNombre" class="text-2xl font-black text-white uppercase tracking-tighter italic"><%= equipo.nombre %></h2>
            <span id="previewSiglas" class="inline-block mt-2 px-3 py-1 bg-yellow-500 text-black text-xs font-bold rounded uppercase tracking-widest shadow-lg"><%= equipo.siglas %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-slate-900 rounded-2xl border border-slate-700 p-1">
    
    <div class="px-6 py-4 border-b border-slate-700 flex justify-between items-center bg-slate-800/50 rounded-t-xl">
      <h2 class="text-xl font-bold text-white flex items-center gap-3">
        <i class="fas fa-users-cog text-green-500"></i> Gestión de Roster
      </h2>
      <span class="bg-slate-900 text-slate-300 text-xs font-bold px-3 py-1 rounded-full border border-slate-700">
        <%= roster ? roster.length : 0 %> Jugadores
      </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-4">
      
      <div class="bg-slate-800 rounded-xl border border-slate-700 flex flex-col h-[600px] overflow-hidden">
        
        <div class="p-4 border-b border-slate-700 bg-slate-900/50">
          <div class="flex justify-between items-center mb-3">
            <h3 class="text-slate-400 font-bold text-sm uppercase">Agentes Libres (<%= freeAgents ? freeAgents.length : 0 %>)</h3>
          </div>
          <div class="relative">
            <i class="fas fa-search absolute left-3 top-3 text-slate-500"></i>
            <input type="text" id="searchAgentInput" placeholder="Buscar por nombre o rol..." class="w-full bg-slate-900 border border-slate-600 rounded-lg py-2 pl-10 pr-4 text-sm text-white focus:outline-none focus:border-blue-500 transition placeholder-slate-600">
          </div>
        </div>
        
        <div id="freeAgentsList" class="overflow-y-auto flex-grow p-4 space-y-2 custom-scrollbar">
          <% if (freeAgents && freeAgents.length > 0) { %>
            <% freeAgents.forEach(p => { %>
              <form action="/admin/equipos/<%= equipo.id %>/add-player" method="POST" class="agent-item" data-search="<%= p.nombre_invocador.toLowerCase() %> <%= p.rol_juego ? p.rol_juego.toLowerCase() : '' %>">
                <input type="hidden" name="jugadorId" value="<%= p.id %>">
                <button type="submit" class="w-full bg-slate-700/30 hover:bg-slate-700 border border-slate-600/50 hover:border-green-500 p-3 rounded-lg flex items-center justify-between group transition">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-slate-900 rounded-full flex items-center justify-center text-slate-400 font-bold text-xs border border-slate-600">
                      <%= p.rol_juego ? p.rol_juego.substring(0,1) : '?' %>
                    </div>
                    <div class="text-left">
                      <div class="text-slate-200 font-bold text-sm group-hover:text-white"><%= p.nombre_invocador %></div>
                      <div class="text-slate-500 text-xs"><%= p.rol_juego || 'SIN ROL' %></div>
                    </div>
                  </div>
                  <i class="fas fa-plus text-slate-600 group-hover:text-green-500 transition"></i>
                </button>
              </form>
            <% }) %>
          <% } else { %>
            <div class="text-center py-20 opacity-50 text-slate-500">No hay jugadores libres.</div>
          <% } %>
          
          <div id="noResultsMsg" class="hidden text-center py-10 text-slate-500 text-sm">
            No se encontraron jugadores.
          </div>
        </div>
      </div>

      <div class="bg-slate-800 rounded-xl border border-slate-700 flex flex-col h-[600px] overflow-hidden">
        <div class="p-4 border-b border-slate-700 bg-slate-900/50">
          <h3 class="text-green-500 font-bold text-sm uppercase flex justify-between items-center h-full">
            <span>Roster Activo</span>
            <span class="bg-green-900/20 text-green-400 px-2 py-1 rounded text-xs border border-green-500/30"><%= equipo.siglas %></span>
          </h3>
        </div>

        <div class="overflow-y-auto flex-grow p-4 space-y-6 custom-scrollbar">
          <% if (roster && roster.length > 0) { %>
            
            <% 
              // Agrupar jugadores por tipo_rol
              const staff = roster.filter(p => p.tipo_rol === 'COACH' || p.tipo_rol === 'STAFF');
              const titulares = roster.filter(p => p.tipo_rol === 'TITULAR');
              const suplentes = roster.filter(p => p.tipo_rol === 'SUPLENTE');
            %>

            <% if (staff.length > 0) { %>
              <div>
                <h4 class="text-slate-500 text-xs font-bold uppercase mb-2 pl-2 border-l-2 border-purple-500">Staff Técnico</h4>
                <div class="space-y-2">
                  <% staff.forEach(p => { %>
                    <form action="/admin/equipos/<%= equipo.id %>/remove-player" method="POST">
                      <input type="hidden" name="jugadorId" value="<%= p.id %>">
                      <button type="submit" class="w-full bg-slate-700/50 border border-slate-600 hover:border-red-500 hover:bg-red-900/10 p-3 rounded-lg flex items-center justify-between group transition" onclick="return confirm('¿Liberar a <%= p.nombre_invocador %>?')">
                        <div class="flex items-center gap-3">
                           <div class="w-8 h-8 bg-purple-900/20 rounded-full flex items-center justify-center font-bold text-xs border border-purple-500/30 text-purple-400">
                              <i class="fas fa-chess-king"></i>
                           </div>
                           <div class="text-left">
                              <div class="text-white font-bold text-sm"><%= p.nombre_invocador %></div>
                              <div class="text-purple-400 text-xs font-bold"><%= p.tipo_rol %></div>
                           </div>
                        </div>
                        <div class="flex items-center gap-2">
                           <span class="text-xs text-slate-500 uppercase font-bold group-hover:hidden">Activo</span>
                           <i class="fas fa-sign-out-alt text-slate-500 group-hover:text-red-500 hidden group-hover:block transition"></i>
                        </div>
                      </button>
                    </form>
                  <% }) %>
                </div>
              </div>
            <% } %>

            <% if (titulares.length > 0) { %>
              <div>
                <h4 class="text-slate-500 text-xs font-bold uppercase mb-2 pl-2 border-l-2 border-green-500">Titulares</h4>
                <div class="space-y-2">
                  <% titulares.forEach(p => { %>
                    <form action="/admin/equipos/<%= equipo.id %>/remove-player" method="POST">
                      <input type="hidden" name="jugadorId" value="<%= p.id %>">
                      <button type="submit" class="w-full bg-slate-700/50 border border-slate-600 hover:border-red-500 hover:bg-red-900/10 p-3 rounded-lg flex items-center justify-between group transition" onclick="return confirm('¿Liberar a <%= p.nombre_invocador %>?')">
                        <div class="flex items-center gap-3">
                           <% 
                              let roleColor = 'text-slate-400 border-slate-600';
                              if(p.rol_juego === 'TOP') roleColor = 'text-red-400 border-red-900/50';
                              if(p.rol_juego === 'JUNGLE') roleColor = 'text-green-400 border-green-900/50';
                              if(p.rol_juego === 'MID') roleColor = 'text-purple-400 border-purple-900/50';
                              if(p.rol_juego === 'ADC') roleColor = 'text-blue-400 border-blue-900/50';
                              if(p.rol_juego === 'SUPPORT') roleColor = 'text-yellow-400 border-yellow-900/50';
                            %>
                           <div class="w-8 h-8 bg-slate-900 rounded-full flex items-center justify-center font-bold text-xs border <%= roleColor %>">
                              <%= p.rol_juego ? p.rol_juego.substring(0,1) : '?' %>
                           </div>
                           <div class="text-left">
                              <div class="text-white font-bold text-sm"><%= p.nombre_invocador %></div>
                              <div class="<%= roleColor.split(' ')[0] %> text-xs font-bold"><%= p.rol_juego %></div>
                           </div>
                        </div>
                        <div class="flex items-center gap-2">
                           <span class="text-xs text-slate-500 uppercase font-bold group-hover:hidden">Activo</span>
                           <i class="fas fa-sign-out-alt text-slate-500 group-hover:text-red-500 hidden group-hover:block transition"></i>
                        </div>
                      </button>
                    </form>
                  <% }) %>
                </div>
              </div>
            <% } %>

            <% if (suplentes.length > 0) { %>
              <div>
                <h4 class="text-slate-500 text-xs font-bold uppercase mb-2 pl-2 border-l-2 border-yellow-500">Suplentes</h4>
                <div class="space-y-2">
                  <% suplentes.forEach(p => { %>
                    <form action="/admin/equipos/<%= equipo.id %>/remove-player" method="POST">
                      <input type="hidden" name="jugadorId" value="<%= p.id %>">
                      <button type="submit" class="w-full bg-slate-700/50 border border-slate-600 hover:border-red-500 hover:bg-red-900/10 p-3 rounded-lg flex items-center justify-between group transition" onclick="return confirm('¿Liberar a <%= p.nombre_invocador %>?')">
                        <div class="flex items-center gap-3">
                           <div class="w-8 h-8 bg-slate-900 rounded-full flex items-center justify-center font-bold text-xs border border-yellow-900/50 text-yellow-400">
                              <i class="fas fa-sync-alt"></i>
                           </div>
                           <div class="text-left">
                              <div class="text-slate-300 font-bold text-sm"><%= p.nombre_invocador %></div>
                              <div class="text-yellow-500 text-xs"><%= p.rol_juego || 'SUP' %></div>
                           </div>
                        </div>
                        <i class="fas fa-sign-out-alt text-slate-500 group-hover:text-red-500 hidden group-hover:block transition"></i>
                      </button>
                    </form>
                  <% }) %>
                </div>
              </div>
            <% } %>

          <% } else { %>
            <div class="text-center py-20 opacity-50">
              <i class="fas fa-users-slash text-4xl text-slate-600 mb-2"></i>
              <p class="text-slate-500 text-sm">Alineación vacía.</p>
            </div>
          <% } %>
        </div>
      </div>

    </div>
  </div>

</main>

<script>
  // 1. Script de la Preview
  const inputNombre = document.getElementById('inputNombre');
  const inputSiglas = document.getElementById('inputSiglas');
  const inputLogo = document.getElementById('inputLogo');
  const previewNombre = document.getElementById('previewNombre');
  const previewSiglas = document.getElementById('previewSiglas');
  const previewImg = document.getElementById('previewImg');

  inputNombre.addEventListener('input', (e) => { previewNombre.textContent = e.target.value || 'Nombre'; });
  inputSiglas.addEventListener('input', (e) => { previewSiglas.textContent = e.target.value || 'TAG'; });
  inputLogo.addEventListener('input', (e) => {
    previewImg.src = e.target.value ? e.target.value : 'https://via.placeholder.com/150?text=No+Logo';
  });

  // 2. SCRIPT DE BÚSQUEDA
  const searchInput = document.getElementById('searchAgentInput');
  const items = document.querySelectorAll('.agent-item');
  const noResults = document.getElementById('noResultsMsg');

  searchInput.addEventListener('keyup', (e) => {
    const term = e.target.value.toLowerCase();
    let visibleCount = 0;

    items.forEach(item => {
      // data-search contiene "nombre rol"
      const searchData = item.getAttribute('data-search');
      if (searchData.includes(term)) {
        item.style.display = 'block';
        visibleCount++;
      } else {
        item.style.display = 'none';
      }
    });

    if (visibleCount === 0) {
      noResults.classList.remove('hidden');
    } else {
      noResults.classList.add('hidden');
    }
  });
</script>

<%- include('partials/footer') %>