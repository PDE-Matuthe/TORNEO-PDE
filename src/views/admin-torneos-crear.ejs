<%- include('partials/head') %>

<div class="flex min-h-screen bg-slate-950 font-sans text-slate-300">
    
    <%- include('partials/admin-sidebar', { active: 'torneos' }) %>

    <main class="flex-1 ml-64 p-8 relative overflow-y-auto min-h-screen">
  
  <div class="bg-slate-800 rounded-2xl shadow-2xl border border-slate-700 overflow-hidden">
    <div class="bg-slate-900 px-8 py-6 border-b border-slate-700 flex items-center gap-4">
      <div class="w-12 h-12 bg-green-600/20 rounded-full flex items-center justify-center border border-green-500/30 text-green-500">
        <i class="fas fa-trophy text-xl"></i>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-white">Nuevo Torneo</h1>
        <p class="text-slate-400 text-sm">Configura la competición básica</p>
      </div>
    </div>

    <form action="/admin/torneos" method="POST" class="p-8">
      
      <div class="mb-6">
        <label class="block text-slate-300 text-sm font-bold mb-2 uppercase tracking-wide">Nombre del Torneo</label>
        <input type="text" name="nombre" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-4 text-white focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500 transition placeholder-slate-600" placeholder="Ej: Copa Apertura 2026" required>
      </div>

      <div class="mb-6">
        <label class="block text-slate-300 text-sm font-bold mb-2 uppercase tracking-wide">Descripción Corta</label>
        <textarea name="descripcion" rows="3" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-4 text-white focus:outline-none focus:border-green-500 transition placeholder-slate-600" placeholder="Ej: Torneo oficial de pretemporada..."></textarea>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div>
          <label class="block text-slate-300 text-sm font-bold mb-2 uppercase tracking-wide">Fecha Inicio</label>
          <input type="date" name="fecha_inicio" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-green-500 transition" required>
        </div>
        <div>
          <label class="block text-slate-300 text-sm font-bold mb-2 uppercase tracking-wide">Fecha Fin (Estimada)</label>
          <input type="date" name="fecha_fin" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-green-500 transition">
        </div>
      </div>

      <div class="flex items-center justify-end gap-4 pt-6 border-t border-slate-700">
        <a href="/admin/torneos" class="text-slate-400 hover:text-white font-bold px-4 transition">Cancelar</a>
        <button type="submit" class="bg-green-600 hover:bg-green-500 text-white font-bold py-3 px-8 rounded-lg shadow-lg shadow-green-900/20 transition transform hover:-translate-y-0.5">
          <i class="fas fa-save mr-2"></i> Guardar Torneo
        </button>
      </div>

    </form>
  </div>
    </main>

</div>

<%- include('partials/footer') %>