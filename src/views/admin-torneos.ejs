<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-4xl font-bold mb-2 text-white">
        <i class="fas fa-trophy text-yellow-500 mr-3"></i> Gestión de Torneos
      </h1>
      <p class="text-slate-400">Crea y administra los torneos del sistema</p>
    </div>
    <a href="/admin/torneos/crear" class="bg-green-600 hover:bg-green-500 text-white font-bold py-2 px-6 rounded-full transition shadow-lg shadow-green-900/20">
      <i class="fas fa-plus mr-2"></i> Nuevo Torneo
    </a>
  </div>

  <% if (typeof torneos !== 'undefined' && torneos && torneos.length > 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% torneos.forEach(torneo => { %>
        <div class="bg-slate-800 rounded-lg p-6 border border-slate-700 hover:border-yellow-500/50 transition shadow-lg relative group flex flex-col">
          
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-2xl font-bold text-white mb-1"><%= torneo.nombre %></h3>
              <p class="text-slate-400 text-sm line-clamp-2"><%= torneo.descripcion || 'Sin descripción' %></p>
            </div>
            <span class="px-2 py-1 rounded text-xs font-bold uppercase <%= torneo.activo ? 'bg-green-900 text-green-300 border border-green-700' : 'bg-slate-700 text-slate-400 border border-slate-600' %>">
              <%= torneo.activo ? 'Activo' : 'Inactivo' %>
            </span>
          </div>
          
          <div class="grid grid-cols-2 gap-3 mb-6">
            <div class="bg-slate-900/50 p-2 rounded text-center border border-slate-700">
              <p class="text-slate-500 text-xs uppercase font-bold">Estado</p>
              <p class="font-bold text-yellow-500"><%= torneo.estado %></p>
            </div>
            <div class="bg-slate-900/50 p-2 rounded text-center border border-slate-700">
              <p class="text-slate-500 text-xs uppercase font-bold">Equipos</p>
              <p class="font-bold text-white"><%= torneo.equipo_count %></p>
            </div>
          </div>
          
          <div class="flex-grow"></div>

          <div class="flex flex-col gap-2 pt-4 border-t border-slate-700/50">
            
            <a href="/admin/torneos/<%= torneo.id %>/editar" class="w-full bg-blue-600 hover:bg-blue-500 text-white py-2 rounded text-center text-sm font-bold transition shadow-lg shadow-blue-900/20">
              <i class="fas fa-cog mr-2"></i> Gestionar Torneo
            </a>

            <div class="flex gap-2">
              <% if (!torneo.activo) { %>
                <form action="/admin/torneos/<%= torneo.id %>/activate" method="POST" class="flex-1">
                  <button type="submit" class="w-full bg-slate-700 hover:bg-green-600 text-green-400 hover:text-white py-2 rounded text-sm font-bold transition border border-slate-600 hover:border-green-500" onclick="return confirm('¿Activar este torneo? Desactivará el actual.')">
                    <i class="fas fa-power-off mr-1"></i> Activar
                  </button>
                </form>
              <% } else { %>
                 <button disabled class="flex-1 bg-green-900/30 text-green-500 py-2 rounded text-sm font-bold border border-green-900/50 cursor-default opacity-50">
                    <i class="fas fa-check mr-1"></i> En Curso
                  </button>
              <% } %>
              
              <form action="/admin/torneos/<%= torneo.id %>/delete" method="POST" class="flex-none">
                 <button type="submit" class="bg-red-900/10 hover:bg-red-600 text-red-500 hover:text-white py-2 px-3 rounded text-sm font-bold transition border border-red-900/30 hover:border-red-500 h-full" onclick="return confirm('¿Eliminar torneo permanentemente?')">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </div>

        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="text-center py-20 bg-slate-800 rounded-xl border border-slate-700 border-dashed opacity-75">
      <i class="fas fa-trophy text-6xl text-slate-600 mb-4"></i>
      <h2 class="text-2xl font-bold text-slate-300">No hay torneos</h2>
      <p class="text-slate-500 mt-2 mb-6">Comienza creando la primera competición.</p>
      <a href="/admin/torneos/crear" class="bg-yellow-600 hover:bg-yellow-500 text-black font-bold py-3 px-6 rounded-full transition">
        Crear Torneo
      </a>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>