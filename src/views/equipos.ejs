<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white">Equipos Inscritos</h1>
    <a href="/admin/equipos/crear" class="btn btn-primary">
      <i class="fas fa-plus"></i> Nuevo Equipo
    </a>
  </div>

  <div class="row">
    <% if (equipos.length > 0) { %>
      <% equipos.forEach(equipo => { %>
        <div class="col-md-4 mb-4">
          <div class="card bg-secondary text-white h-100">
            <div class="card-body text-center">
              <img src="<%= equipo.logo_url || 'https://via.placeholder.com/150?text=No+Logo' %>" 
                   alt="Logo <%= equipo.nombre %>" 
                   class="rounded-circle mb-3" 
                   style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #d4af37;">
              
              <h3 class="card-title"><%= equipo.nombre %></h3>
              <span class="badge bg-dark mb-2"><%= equipo.region %></span>
              
              <div class="mt-4">
                <a href="/admin/equipos/<%= equipo.id %>/jugadores" class="btn btn-sm btn-warning mb-2 w-100"><i class="fas fa-users"></i> Gestionar Roster</a>
                <a href="/admin/equipos/editar/<%= equipo.id %>" class="btn btn-sm btn-info">Editar</a>
                <a href="/admin/equipos/delete/<%= equipo.id %>" class="btn btn-sm btn-danger">Eliminar</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center text-white">
        <h3>Aún no has registrado ningún equipo.</h3>
        <p>¡Empieza añadiendo uno ahora!</p>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>