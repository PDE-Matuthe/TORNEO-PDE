<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <%- include('partials/head').replace(/<\/head>/, '').replace(/<body.*>/, '') %>
  <style>
    .hero-bg {
      background-image: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(15, 23, 42, 1)), 
                        url('https://ddragon.leagueoflegends.com/cdn/img/champion/splash/Azir_0.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed; /* Efecto Parallax */
    }
    .text-glow {
      text-shadow: 0 0 20px rgba(234, 179, 8, 0.6);
    }
  </style>
</head>
<body class="bg-slate-900 text-slate-200 font-sans antialiased selection:bg-yellow-500 selection:text-black flex flex-col min-h-screen">

  <header class="hero-bg h-screen flex flex-col items-center justify-center relative px-4 text-center">
    
    <div class="animate-fade-in-up">
      <h1 class="text-5xl md:text-8xl font-black text-transparent bg-clip-text bg-gradient-to-b from-yellow-200 via-yellow-500 to-yellow-700 tracking-tighter mb-4 text-glow drop-shadow-2xl">
        PUNILLA DEERS
      </h1>
      <h2 class="text-2xl md:text-4xl font-bold text-white tracking-widest uppercase border-t-2 border-yellow-500 pt-4 inline-block">
        ESPORTS
      </h2>
    </div>

    <div class="absolute bottom-10 animate-bounce">
      <i class="fas fa-chevron-down text-4xl text-yellow-500 opacity-80"></i>
    </div>
  </header>

  <div class="sticky top-0 z-50 shadow-2xl bg-slate-900/95 backdrop-blur-sm border-b border-yellow-600/30">
    <%- include('partials/nav') %>
  </div>

  <main class="flex-grow">
    
    <section class="py-16 bg-slate-900">
      <div class="max-w-5xl mx-auto px-4">
        <div class="flex items-center gap-4 mb-8 justify-center">
          <div class="h-1 w-12 bg-red-600"></div>
          <h3 class="text-3xl font-bold text-white uppercase tracking-wider">Partidas de Hoy</h3>
          <div class="h-1 w-12 bg-red-600"></div>
        </div>

        <% if (partidasHoy && partidasHoy.length > 0) { %>
          <div class="grid gap-4">
            <% partidasHoy.forEach(match => { %>
              <div class="bg-slate-800 rounded-lg p-4 border-l-4 border-yellow-500 flex flex-col md:flex-row items-center justify-between gap-4 shadow-lg hover:scale-[1.01] transition-transform">
                <div class="text-2xl font-bold text-white font-mono">
                  <%= new Date(match.fecha_partida).getHours().toString().padStart(2, '0') %>:<%= new Date(match.fecha_partida).getMinutes().toString().padStart(2, '0') %>
                </div>
                
                <div class="flex items-center gap-4 flex-1 justify-center">
                  <span class="text-white font-bold text-lg text-right flex-1"><%= match.azul_nombre %></span>
                  <img src="<%= match.azul_logo %>" class="w-10 h-10 object-contain">
                  <span class="text-red-500 font-black text-xl px-2">VS</span>
                  <img src="<%= match.rojo_logo %>" class="w-10 h-10 object-contain">
                  <span class="text-white font-bold text-lg text-left flex-1"><%= match.rojo_nombre %></span>
                </div>

                <span class="bg-slate-700 text-slate-300 text-xs px-2 py-1 rounded uppercase tracking-wider">
                  <%= match.fase_torneo %>
                </span>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-8 opacity-50">
            <i class="fas fa-bed text-4xl mb-2"></i>
            <p>No hay enfrentamientos programados para hoy.</p>
          </div>
        <% } %>
      </div>
    </section>

    <section class="py-16 bg-gradient-to-r from-slate-900 via-slate-800 to-slate-900 border-y border-slate-700">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          
          <div class="p-4">
            <div class="text-4xl md:text-5xl font-black text-yellow-500 mb-2"><%= stats.torneos %></div>
            <div class="text-slate-400 uppercase text-sm font-bold tracking-widest">Torneos</div>
          </div>
          
          <div class="p-4">
            <div class="text-4xl md:text-5xl font-black text-white mb-2"><%= stats.equipos %></div>
            <div class="text-slate-400 uppercase text-sm font-bold tracking-widest">Equipos</div>
          </div>

          <div class="p-4">
            <div class="text-4xl md:text-5xl font-black text-white mb-2"><%= stats.jugadores %></div>
            <div class="text-slate-400 uppercase text-sm font-bold tracking-widest">Jugadores</div>
          </div>

          <div class="p-4">
            <div class="text-4xl md:text-5xl font-black text-red-500 mb-2"><%= stats.partidas %></div>
            <div class="text-slate-400 uppercase text-sm font-bold tracking-widest">Partidas</div>
          </div>

        </div>
      </div>
    </section>

    <% if (torneo) { %>
      <section class="py-20 relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('https://lolstatic-a.akamaihd.net/frontpage/apps/prod/harbinger-l10-website/es-mx/production/es-mx/static/support-d63ae08baf517425864ddc020a5871d5.jpg')] bg-cover opacity-10"></div>
        
        <div class="relative max-w-6xl mx-auto px-4 text-center">
          <span class="text-yellow-500 font-bold tracking-widest uppercase mb-2 block">Torneo en Curso</span>
          <h2 class="text-5xl font-black text-white mb-12 uppercase drop-shadow-xl"><%= torneo.nombre %></h2>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            
            <a href="/calendario" class="group bg-slate-800/80 backdrop-blur border border-slate-700 p-8 rounded-xl hover:bg-slate-700 hover:border-yellow-500 transition duration-300">
              <i class="fas fa-calendar-alt text-4xl text-yellow-500 mb-4 group-hover:scale-110 transition-transform"></i>
              <h4 class="text-xl font-bold text-white mb-2">Calendario</h4>
              <p class="text-slate-400 text-sm">Ver fechas y horarios</p>
            </a>

            <a href="/equipos" class="group bg-slate-800/80 backdrop-blur border border-slate-700 p-8 rounded-xl hover:bg-slate-700 hover:border-blue-500 transition duration-300">
              <i class="fas fa-users text-4xl text-blue-500 mb-4 group-hover:scale-110 transition-transform"></i>
              <h4 class="text-xl font-bold text-white mb-2">Equipos</h4>
              <p class="text-slate-400 text-sm">Rosters y participantes</p>
            </a>

            <a href="/bracket" class="group bg-slate-800/80 backdrop-blur border border-slate-700 p-8 rounded-xl hover:bg-slate-700 hover:border-red-500 transition duration-300">
              <i class="fas fa-sitemap text-4xl text-red-500 mb-4 group-hover:scale-110 transition-transform"></i>
              <h4 class="text-xl font-bold text-white mb-2">Llaves</h4>
              <p class="text-slate-400 text-sm">El camino a la final</p>
            </a>

            <a href="/mvp" class="group bg-slate-800/80 backdrop-blur border border-slate-700 p-8 rounded-xl hover:bg-slate-700 hover:border-purple-500 transition duration-300">
              <i class="fas fa-crown text-4xl text-purple-500 mb-4 group-hover:scale-110 transition-transform"></i>
              <h4 class="text-xl font-bold text-white mb-2">Ranking MVP</h4>
              <p class="text-slate-400 text-sm">Los mejores jugadores</p>
            </a>

          </div>
        </div>
      </section>
    <% } %>

  </main>

  <%- include('partials/footer') %>