<%- include('partials/head') %>

<style>
  /* Animación de entrada suave hacia arriba */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-enter {
    animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    opacity: 0; /* Inicia invisible */
  }
  
  /* Retrasos para efecto cascada */
  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.2s; }
  .delay-300 { animation-delay: 0.3s; }
  .delay-400 { animation-delay: 0.4s; }

  /* Fondo Hero con imagen fija (Parallax) */
  .hero-bg {
    background-image: linear-gradient(to bottom, rgba(15, 23, 42, 0.2), rgba(2, 6, 23, 1)), 
                      url('https://ddragon.leagueoflegends.com/cdn/img/champion/splash/Azir_0.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }
</style>

<body class="bg-slate-950 text-slate-200 font-sans antialiased selection:bg-yellow-500 selection:text-black flex flex-col min-h-screen">

  <div class="sticky top-0 z-50">
    <%- include('partials/nav') %>
  </div>

  <header class="hero-bg min-h-[85vh] flex flex-col items-center justify-center relative px-4 text-center overflow-hidden">
    
    <div class="relative z-10 max-w-4xl mx-auto">
      <h1 class="animate-enter text-6xl md:text-8xl lg:text-9xl font-black text-transparent bg-clip-text bg-gradient-to-b from-yellow-200 via-yellow-500 to-yellow-700 tracking-tighter mb-4 drop-shadow-[0_0_35px_rgba(234,179,8,0.4)]">
        PUNILLA DEERS
      </h1>
      
      <div class="animate-enter delay-100">
        <h2 class="text-2xl md:text-4xl font-bold text-white tracking-[0.5em] uppercase border-t-2 border-yellow-500/50 pt-6 inline-block">
          ESPORTS
        </h2>
      </div>
    </div>

    <div class="absolute bottom-10 animate-bounce opacity-50">
      <a href="#active-tournament" >
          <i class="fas fa-chevron-down text-3xl text-white"></i>
        </a>
    </div>
  </header>

  <main class="flex-grow">
    
    <% if (partidasHoy && partidasHoy.length > 0) { %>
    <section class="py-16 bg-slate-900 border-b border-slate-800 relative">
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-red-500/50 to-transparent"></div>
      
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex items-center gap-4 mb-10 justify-center animate-enter delay-300">
            <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
            <h3 class="text-3xl font-black text-white uppercase italic tracking-tighter">Partidas de <span class="text-red-500">Hoy</span></h3>
        </div>

        <div class="grid gap-6 animate-enter delay-400">
          <% partidasHoy.forEach(match => { %>
            <div class="group bg-slate-800/50 hover:bg-slate-800 border border-slate-700 hover:border-red-500/50 rounded-xl p-6 flex flex-col md:flex-row items-center justify-between gap-6 transition-all duration-300 hover:shadow-[0_0_30px_rgba(239,68,68,0.15)] hover:-translate-y-1">
              
              <div class="text-center md:text-left min-w-[100px]">
                <div class="text-2xl font-black text-white font-mono">
                  <%= new Date(match.fecha_partida).getHours().toString().padStart(2, '0') %>:<%= new Date(match.fecha_partida).getMinutes().toString().padStart(2, '0') %>
                </div>
                
                <% if (match.estado === 'FINALIZADO') { %>
                  <div class="text-[10px] text-slate-500 font-bold uppercase tracking-wider flex items-center gap-1">
                    <span class="w-1.5 h-1.5 rounded-full bg-slate-600"></span> Finalizado
                  </div>
                <% } else if (match.estado === 'EN_VIVO') { %>
                  <div class="text-[10px] text-red-500 font-bold uppercase tracking-wider flex items-center gap-1 animate-pulse">
                    <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span> En Vivo
                  </div>
                <% } else { %>
                  <div class="text-[10px] text-blue-400 font-bold uppercase tracking-wider flex items-center gap-1">
                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500"></span> Programado
                  </div>
                <% } %>
              </div>
              
              <div class="flex items-center gap-6 md:gap-12 flex-1 justify-center w-full md:w-auto">
                <div class="flex items-center gap-3 flex-1 justify-end">
                    <span class="text-slate-300 font-bold text-lg md:text-xl text-right hidden md:block group-hover:text-white transition-colors"><%= match.azul_nombre %></span>
                    <img src="<%= match.azul_logo %>" class="w-12 h-12 md:w-14 md:h-14 object-contain drop-shadow-lg group-hover:scale-110 transition-transform">
                </div>
                
                <span class="text-red-500 font-black text-2xl italic opacity-50 group-hover:opacity-100 transition-opacity">VS</span>
                
                <div class="flex items-center gap-3 flex-1 justify-start">
                    <img src="<%= match.rojo_logo %>" class="w-12 h-12 md:w-14 md:h-14 object-contain drop-shadow-lg group-hover:scale-110 transition-transform">
                    <span class="text-slate-300 font-bold text-lg md:text-xl text-left hidden md:block group-hover:text-white transition-colors"><%= match.rojo_nombre %></span>
                </div>
              </div>

              <span class="bg-slate-900/50 border border-slate-700 text-slate-400 text-xs font-bold px-4 py-2 rounded-full uppercase tracking-widest min-w-[120px] text-center">
                <%= match.fase_torneo %>
              </span>
            </div>
          <% }) %>
        </div>
      </div>
    </section>
    <% } %>

    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-950 to-black"></div>
      
      <div class="relative max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          
          <div class="bg-slate-900/40 backdrop-blur-md border border-slate-800 p-6 rounded-2xl text-center group hover:border-yellow-500/30 transition-colors">
            <div class="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-b from-yellow-300 to-yellow-600 mb-2 group-hover:scale-110 transition-transform duration-300"><%= stats.torneos %></div>
            <div class="text-slate-500 uppercase text-xs font-bold tracking-[0.2em] group-hover:text-yellow-500 transition-colors">Ediciones</div>
          </div>
          
          <div class="bg-slate-900/40 backdrop-blur-md border border-slate-800 p-6 rounded-2xl text-center group hover:border-blue-500/30 transition-colors">
            <div class="text-4xl md:text-5xl font-black text-white mb-2 group-hover:scale-110 transition-transform duration-300"><%= stats.equipos %></div>
            <div class="text-slate-500 uppercase text-xs font-bold tracking-[0.2em] group-hover:text-blue-500 transition-colors">Equipos</div>
          </div>

          <div class="bg-slate-900/40 backdrop-blur-md border border-slate-800 p-6 rounded-2xl text-center group hover:border-purple-500/30 transition-colors">
            <div class="text-4xl md:text-5xl font-black text-white mb-2 group-hover:scale-110 transition-transform duration-300"><%= stats.jugadores %></div>
            <div class="text-slate-500 uppercase text-xs font-bold tracking-[0.2em] group-hover:text-purple-500 transition-colors">Jugadores</div>
          </div>

          <div class="bg-slate-900/40 backdrop-blur-md border border-slate-800 p-6 rounded-2xl text-center group hover:border-red-500/30 transition-colors">
            <div class="text-4xl md:text-5xl font-black text-red-500 mb-2 group-hover:scale-110 transition-transform duration-300"><%= stats.partidas %></div>
            <div class="text-slate-500 uppercase text-xs font-bold tracking-[0.2em] group-hover:text-red-500 transition-colors">Partidas</div>
          </div>

        </div>
      </div>
    </section>

    <% if (torneoActivo) { %>
      <section id="active-tournament" class="py-24 relative overflow-hidden bg-slate-950">
        <div class="absolute inset-0 bg-[url('https://lolstatic-a.akamaihd.net/frontpage/apps/prod/harbinger-l10-website/es-mx/production/es-mx/static/support-d63ae08baf517425864ddc020a5871d5.jpg')] bg-cover opacity-5 bg-center mix-blend-luminosity"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-slate-950 via-transparent to-slate-950"></div>
        
        <div class="relative max-w-6xl mx-auto px-4 text-center">
          <span class="inline-block px-4 py-1 rounded-full bg-yellow-500/10 border border-yellow-500/20 text-yellow-500 text-xs font-bold tracking-widest uppercase mb-6 animate-pulse">
            ● Torneo en Curso
          </span>
          <h2 class="text-5xl md:text-6xl font-black text-white mb-16 uppercase italic tracking-tighter drop-shadow-2xl">
            <%= torneoActivo.nombre %>
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            
            <a href="/calendario" class="group relative bg-slate-900/80 border border-slate-800 p-8 rounded-2xl hover:border-yellow-500/50 hover:-translate-y-2 transition-all duration-300 overflow-hidden">
              <div class="absolute inset-0 bg-yellow-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <i class="fas fa-calendar-alt text-4xl text-slate-600 group-hover:text-yellow-500 mb-6 transition-colors duration-300"></i>
              <h4 class="text-xl font-black text-white mb-2 uppercase italic">Calendario</h4>
              <p class="text-slate-500 text-sm font-medium">Fechas y horarios</p>
            </a>

            <a href="/equipos" class="group relative bg-slate-900/80 border border-slate-800 p-8 rounded-2xl hover:border-blue-500/50 hover:-translate-y-2 transition-all duration-300 overflow-hidden">
              <div class="absolute inset-0 bg-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <i class="fas fa-users text-4xl text-slate-600 group-hover:text-blue-500 mb-6 transition-colors duration-300"></i>
              <h4 class="text-xl font-black text-white mb-2 uppercase italic">Equipos</h4>
              <p class="text-slate-500 text-sm font-medium">Rosters y Teams</p>
            </a>

            <a href="/bracket" class="group relative bg-slate-900/80 border border-slate-800 p-8 rounded-2xl hover:border-red-500/50 hover:-translate-y-2 transition-all duration-300 overflow-hidden">
              <div class="absolute inset-0 bg-red-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <i class="fas fa-sitemap text-4xl text-slate-600 group-hover:text-red-500 mb-6 transition-colors duration-300"></i>
              <h4 class="text-xl font-black text-white mb-2 uppercase italic">Llaves</h4>
              <p class="text-slate-500 text-sm font-medium">Camino a la final</p>
            </a>

            <a href="/mvp" class="group relative bg-slate-900/80 border border-slate-800 p-8 rounded-2xl hover:border-purple-500/50 hover:-translate-y-2 transition-all duration-300 overflow-hidden">
              <div class="absolute inset-0 bg-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <i class="fas fa-crown text-4xl text-slate-600 group-hover:text-purple-500 mb-6 transition-colors duration-300"></i>
              <h4 class="text-xl font-black text-white mb-2 uppercase italic">Ranking MVP</h4>
              <p class="text-slate-500 text-sm font-medium">Top Players</p>
            </a>

          </div>
        </div>
      </section>
    <% } %>

    <section class="py-20 bg-slate-950 border-t border-slate-900">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex items-center justify-between mb-10">
                <h3 class="text-3xl font-black text-white uppercase italic tracking-tighter">
                    ULTIMOS <span class="text-red-600">VIDEOS</span>
                </h3>
                <a href="https://www.youtube.com/@Nachopunto2" target="_blank" class="text-slate-400 hover:text-white text-xs font-bold uppercase tracking-widest transition-colors flex items-center gap-2 group">
                    Ver canal <i class="fas fa-arrow-right text-[10px] group-hover:translate-x-1 transition-transform"></i>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <% if (videosYoutube && videosYoutube.length > 0) { %>
                    <% videosYoutube.forEach(video => { %>
                        <div class="group flex flex-col gap-3">
                            <div class="aspect-video rounded-xl overflow-hidden bg-slate-900 border border-slate-800 shadow-xl group-hover:border-red-600/30 transition-all relative">
                                <iframe class="w-full h-full opacity-90 group-hover:opacity-100 transition-opacity" 
                                    src="https://www.youtube.com/embed/<%= video.id %>" 
                                    title="<%= video.titulo %>" 
                                    frameborder="0" 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen>
                                </iframe>
                            </div>
                            <div class="px-1">
                                <h4 class="text-white text-sm font-bold line-clamp-2 group-hover:text-red-500 transition-colors">
                                    <%= video.titulo %>
                                </h4>
                                <span class="text-slate-500 text-xs font-medium"><%= video.fecha %></span>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-span-3 text-center py-10 text-slate-500 text-sm">
                        <p>No se pudieron cargar los videos recientes.</p>
                        <a href="https://www.youtube.com/@Nachopunto2" target="_blank" class="text-yellow-500 hover:underline">Ir al canal oficial</a>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

  </main>

  <%- include('partials/footer') %>
</body>
</html>