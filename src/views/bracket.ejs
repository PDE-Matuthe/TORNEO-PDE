<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="max-w-7xl mx-auto px-4 py-10">
  <!-- Header -->
  <div class="text-center mb-10">
    <% if (typeof isTorneoEspecifico !== 'undefined' && isTorneoEspecifico) { %>
      <div class="mb-4 flex items-center justify-center gap-2">
        <a href="/torneos-anteriores" class="text-gold hover:text-yellow-400 text-sm">Torneos Anteriores</a>
        <span class="text-slate-500">/</span>
        <span class="text-slate-400 text-sm"><%= torneo.nombre %></span>
      </div>
    <% } %>
    <h1 class="text-4xl font-bold text-white mb-2">
      <i class="fas fa-sitemap text-gold mr-2"></i>Bracket del Torneo<% if (typeof isTorneoEspecifico !== 'undefined' && isTorneoEspecifico) { %> - <%= torneo.nombre %><% } %>
    </h1>
    <p class="text-slate-400">Llaves y estructura del torneo</p>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-900/20 border border-red-700 rounded-lg p-4 mb-6 text-red-400">
      <i class="fas fa-exclamation-circle mr-2"></i><%= error %>
    </div>
  <% } %>

  <% if (typeof fases !== 'undefined' && Object.keys(fases).length > 0) { %>
    <div class="space-y-8">
      <% Object.entries(fases).forEach(([fase, partidas]) => { %>
        <div class="bg-slate-800 rounded-lg p-6 border border-slate-700">
          <h2 class="text-2xl font-bold text-gold mb-6 flex items-center gap-2">
            <i class="fas fa-crown"></i><%= fase %>
            <span class="text-sm text-slate-400 font-normal ml-2">(<%= partidas.length %> partida<%= partidas.length !== 1 ? 's' : '' %>)</span>
          </h2>
          
          <div class="space-y-3">
            <% partidas.forEach(partida => { %>
              <div class="bg-slate-700/50 hover:bg-slate-700 rounded-lg p-4 transition border border-slate-600/50">
                <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                  <!-- Equipo Azul -->
                  <div class="flex items-center gap-3 flex-1 justify-end">
                    <div class="text-right">
                      <p class="text-white font-bold"><%= partida.azul_nombre %></p>
                    </div>
                    <img src="<%= partida.azul_logo %>" alt="<%= partida.azul_nombre %>" class="w-12 h-12 object-contain drop-shadow">
                  </div>

                  <!-- Resultado -->
                  <div class="px-6 py-2 bg-slate-900 rounded-lg border border-slate-600">
                    <% if (partida.ganador_id) { %>
                      <div class="text-center">
                        <p class="text-green-400 font-bold text-lg"><%= partida.azul_kills %>-<%= partida.rojo_kills %></p>
                        <p class="text-xs text-slate-400">FINALIZADO</p>
                      </div>
                    <% } else { %>
                      <p class="text-slate-400 font-bold text-center">VS</p>
                      <p class="text-xs text-slate-500 text-center">
                        <%= new Date(partida.fecha_partida).toLocaleDateString('es-ES', { 
                          weekday: 'short', 
                          year: '2-digit', 
                          month: '2-digit', 
                          day: '2-digit',
                          hour: '2-digit',
                          minute: '2-digit'
                        }) %>
                      </p>
                    <% } %>
                  </div>

                  <!-- Equipo Rojo -->
                  <div class="flex items-center gap-3 flex-1 justify-start">
                    <img src="<%= partida.rojo_logo %>" alt="<%= partida.rojo_nombre %>" class="w-12 h-12 object-contain drop-shadow">
                    <div class="text-left">
                      <p class="text-white font-bold"><%= partida.rojo_nombre %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-20 opacity-50">
      <i class="fas fa-sitemap text-6xl text-slate-600 mb-4"></i>
      <p class="text-slate-400 text-xl">Aún no se ha publicado el bracket del torneo.</p>
    </div>
  <% } %>

  <!-- Enlaces de navegación para torneo específico -->
  <% if (typeof isTorneoEspecifico !== 'undefined' && isTorneoEspecifico && typeof torneo !== 'undefined' && torneo) { %>
    <div class="mt-12 pt-8 border-t border-slate-700">
      <div class="flex flex-wrap gap-3 justify-center">
        <a href="/torneo/<%= torneo.id %>/calendario" class="px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded transition flex items-center gap-2">
          <i class="fas fa-calendar"></i> Calendario
        </a>
        <a href="/torneo/<%= torneo.id %>/equipos" class="px-4 py-2 bg-pink-600 hover:bg-pink-500 text-white rounded transition flex items-center gap-2">
          <i class="fas fa-users"></i> Equipos
        </a>
        <a href="/torneo/<%= torneo.id %>/mvp" class="px-4 py-2 bg-yellow-600 hover:bg-yellow-500 text-white rounded transition flex items-center gap-2">
          <i class="fas fa-star"></i> Ranking MVP
        </a>
        <a href="/torneos-anteriores" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded transition flex items-center gap-2">
          <i class="fas fa-arrow-left"></i> Volver
        </a>
      </div>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
