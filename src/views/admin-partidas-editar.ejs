<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="max-w-3xl mx-auto px-4 py-16">
  
  <div class="bg-slate-800 rounded-2xl shadow-2xl border border-slate-700 overflow-hidden">
    
    <div class="bg-slate-900 px-8 py-6 border-b border-slate-700 flex items-center gap-4">
      <div class="w-12 h-12 bg-blue-600/20 rounded-full flex items-center justify-center border border-blue-500/30 text-blue-500">
        <i class="fas fa-sliders-h text-xl"></i>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-white">Modificar Partida</h1>
        <p class="text-slate-400 text-sm">Ajustar horarios, lados o estado</p>
      </div>
    </div>

    <form action="/admin/partidas/<%= partida.id %>/update" method="POST" class="p-8 space-y-8">
      
      <div class="bg-slate-900/50 p-6 rounded-xl border border-slate-700 relative">
        <h3 class="text-slate-400 text-xs font-bold uppercase tracking-widest mb-4 text-center">Configuraci√≥n de Lados</h3>
        
        <div class="flex items-center justify-between gap-4">
          
          <div class="flex-1 text-center group" id="sideBlue">
            <div class="text-blue-500 font-bold mb-2 uppercase text-xs tracking-wider">Lado Azul</div>
            <img src="<%= partida.azul_logo %>" onerror="this.src='https://via.placeholder.com/60'" class="w-16 h-16 mx-auto object-contain mb-2">
            <div class="text-white font-bold"><%= partida.azul_nombre %></div>
          </div>

          <div class="flex flex-col items-center">
            <label class="cursor-pointer group relative">
              <input type="checkbox" name="swap_sides" id="swapCheck" class="peer sr-only">
              <div class="w-12 h-12 bg-slate-800 border border-slate-600 rounded-full flex items-center justify-center text-slate-400 peer-checked:bg-yellow-600 peer-checked:text-black peer-checked:border-yellow-500 transition-all duration-300 shadow-lg group-hover:scale-110">
                <i class="fas fa-exchange-alt transition-transform duration-500 peer-checked:rotate-180"></i>
              </div>
              <span class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-[10px] text-slate-500 uppercase font-bold w-20 text-center opacity-0 group-hover:opacity-100 transition">Invertir</span>
            </label>
          </div>

          <div class="flex-1 text-center group" id="sideRed">
            <div class="text-red-500 font-bold mb-2 uppercase text-xs tracking-wider">Lado Rojo</div>
            <img src="<%= partida.rojo_logo %>" onerror="this.src='https://via.placeholder.com/60'" class="w-16 h-16 mx-auto object-contain mb-2">
            <div class="text-white font-bold"><%= partida.rojo_nombre %></div>
          </div>

        </div>
        <p class="text-center text-xs text-slate-600 mt-4 italic">Marca el bot√≥n del centro para intercambiar los equipos de lado.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Fecha y Hora</label>
          <% 
             const date = new Date(partida.fecha_partida);
             date.setMinutes(date.getMinutes() - date.getTimezoneOffset());
             const defaultDate = date.toISOString().slice(0, 16);
          %>
          <input type="datetime-local" name="fecha_partida" value="<%= defaultDate %>" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition">
        </div>

        <div>
          <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Instancia</label>
          <select name="fase_torneo" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition">
            <% const fases = ['Dieciseisavos', 'Octavos', 'Cuartos', 'Semifinal', 'Final', 'Tercer Puesto', 'Amistoso']; %>
            <% fases.forEach(f => { %>
              <option value="<%= f %>" <%= partida.fase_torneo.includes(f) ? 'selected' : '' %>><%= f %></option>
            <% }) %>
          </select>
        </div>
      </div>

      <div class="bg-slate-900/30 p-6 rounded-xl border border-slate-700">
        <h3 class="text-slate-400 text-xs font-bold uppercase tracking-widest mb-4">Estado del Encuentro</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-start">
          
          <div>
            <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Estado Actual</label>
            <select name="estado" class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 text-white focus:outline-none focus:border-blue-500 transition font-bold">
              <option value="ACTIVO" <%= partida.estado === 'ACTIVO' ? 'selected' : '' %>>üìÖ Activo (Programado)</option>
              <option value="EN_VIVO" <%= partida.estado === 'EN_VIVO' ? 'selected' : '' %> class="text-red-400">üî¥ En Vivo (Live)</option>
              <option value="FINALIZADO" <%= partida.estado === 'FINALIZADO' ? 'selected' : '' %> class="text-green-400">üèÅ Finalizado</option>
              <option value="CANCELADO" <%= partida.estado === 'CANCELADO' ? 'selected' : '' %> class="text-slate-500">‚ùå Cancelado</option>
            </select>
            <p class="text-[10px] text-slate-500 mt-2">
               Nota: Al poner "En Vivo", cualquier otra partida activa se apagar√° autom√°ticamente.
            </p>
          </div>

          <div>
            <label class="block text-slate-300 text-xs font-bold mb-2 uppercase tracking-wide">Link del Video (VOD)</label>
            <div class="relative">
              <input type="url" name="vod_url" value="<%= partida.vod_url || '' %>" placeholder="https://youtube.com/watch?v=..." class="w-full bg-slate-900 border border-slate-600 rounded-lg p-3 pl-10 text-white focus:outline-none focus:border-red-500 transition placeholder-slate-600">
              <i class="fab fa-youtube absolute left-3 top-3.5 text-red-500"></i>
            </div>
            <p class="text-[10px] text-slate-500 mt-1">Pega el link del partido resubido aqu√≠ cuando finalice.</p>
          </div>

        </div>
      </div>

      <div class="flex items-center justify-end gap-4 pt-6 border-t border-slate-700">
        <a href="/admin/partidas" class="text-slate-400 hover:text-white font-bold px-4 transition text-sm">Cancelar</a>
        <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-8 rounded-lg shadow-lg shadow-blue-900/20 transition transform hover:-translate-y-0.5">
          <i class="fas fa-save mr-2"></i> Guardar Cambios
        </button>
      </div>

    </form>
  </div>
</main>

<script>
  // Script simplificado solo para el Swap visual
  const swapCheck = document.getElementById('swapCheck');
  const sideBlue = document.getElementById('sideBlue');
  const sideRed = document.getElementById('sideRed');

  swapCheck.addEventListener('change', () => {
    if (swapCheck.checked) {
      sideBlue.classList.add('order-last');
      sideRed.classList.add('order-first');
    } else {
      sideBlue.classList.remove('order-last');
      sideRed.classList.remove('order-first');
    }
  });
</script>

<%- include('partials/footer') %>