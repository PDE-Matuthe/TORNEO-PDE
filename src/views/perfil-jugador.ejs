<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="min-h-screen bg-slate-900 py-12 px-4">
  <div class="max-w-6xl mx-auto space-y-8">

    <div class="bg-slate-800 rounded-2xl border border-slate-700 shadow-2xl overflow-hidden relative">
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900 to-slate-800 opacity-90"></div>
      
      <div class="relative z-10 p-8 md:p-12 flex flex-col md:flex-row items-center gap-8">
        
        <div class="relative">
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-slate-700 border-4 border-slate-600 flex items-center justify-center shadow-xl">
             <% 
               let iconClass = 'fa-user';
               if(jugador.rol_juego === 'TOP') iconClass = 'fa-arrow-up';
               if(jugador.rol_juego === 'JUNGLE') iconClass = 'fa-tree';
               if(jugador.rol_juego === 'MID') iconClass = 'fa-bolt';
               if(jugador.rol_juego === 'ADC') iconClass = 'fa-crosshairs';
               if(jugador.rol_juego === 'SUPPORT') iconClass = 'fa-hand-holding-heart';
               if(jugador.tipo_rol === 'COACH') iconClass = 'fa-brain';
             %>
             <i class="fas <%= iconClass %> text-5xl md:text-6xl text-slate-400"></i>
          </div>
          <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-yellow-500 text-black font-bold text-xs uppercase tracking-widest rounded shadow-lg whitespace-nowrap">
            <%= jugador.tipo_rol %>
          </div>
        </div>

        <div class="text-center md:text-left flex-1">
          <h1 class="text-4xl md:text-5xl font-black text-white tracking-tighter mb-2">
            <%= jugador.nombre_invocador %>
          </h1>
          
          <div class="flex flex-wrap justify-center md:justify-start gap-4 items-center text-slate-300 mb-4">
            <% if (jugador.equipo_nombre) { %>
              <a href="/equipos/<%= jugador.equipo_id %>" class="flex items-center gap-2 hover:text-white transition">
                <i class="fas fa-shield-alt text-blue-400"></i>
                <span class="font-bold text-lg"><%= jugador.equipo_nombre %></span>
              </a>
            <% } else { %>
              <span class="flex items-center gap-2 text-slate-500">
                <i class="fas fa-user-tag"></i> Agente Libre
              </span>
            <% } %>

            <span class="text-slate-600">|</span>

            <span class="flex items-center gap-2">
              <i class="fas fa-map-marker-alt text-red-400"></i>
              <span class="font-bold"><%= jugador.rol_juego || 'Sin Posición' %></span>
            </span>
          </div>
        </div>

        <% 
           // CORRECCIÓN AQUÍ: Usamos Number() para evitar concatenación de strings
           const k = Number(stats.total_kills || 0);
           const d = Number(stats.total_deaths || 0);
           const a = Number(stats.total_assists || 0);
           
           // Cálculo seguro
           const kdaRatio = d > 0 ? ((k + a) / d).toFixed(2) : (k + a).toFixed(2);
           const kdaDisplay = (d === 0 && (k+a) > 0) ? "Perfect" : kdaRatio;
        %>
        <div class="bg-slate-900/50 p-6 rounded-xl border border-slate-700 text-center min-w-[150px]">
           <div class="text-slate-400 text-xs font-bold uppercase tracking-widest mb-1">KDA RATIO</div>
           <div class="text-4xl font-black text-yellow-400"><%= stats.total_partidas > 0 ? kdaRatio : '-' %></div>
        </div>

      </div>
    </div>

    <% if (stats.total_partidas > 0) { %>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        
        <% const wr = ((Number(stats.victorias) / Number(stats.total_partidas)) * 100).toFixed(1); %>
        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center">
          <div class="text-3xl font-bold <%= wr >= 50 ? 'text-green-400' : 'text-red-400' %>"><%= wr %>%</div>
          <div class="text-slate-500 text-xs font-bold uppercase mt-1">Win Ratio</div>
          <div class="text-xs text-slate-600 mt-1"><%= stats.victorias %>W - <%= stats.total_partidas - stats.victorias %>L</div>
        </div>

        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center">
          <div class="text-3xl font-bold text-white"><%= stats.total_kills %></div>
          <div class="text-slate-500 text-xs font-bold uppercase mt-1">Asesinatos</div>
        </div>

        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center">
          <div class="text-3xl font-bold text-blue-300"><%= Math.round(Number(stats.total_minions)).toLocaleString() %></div>
          <div class="text-slate-500 text-xs font-bold uppercase mt-1">Minions Totales</div>
        </div>

        <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center">
          <div class="text-3xl font-bold text-purple-300"><%= stats.total_partidas %></div>
          <div class="text-slate-500 text-xs font-bold uppercase mt-1">Partidas Jugadas</div>
        </div>
        
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <h3 class="text-white font-bold uppercase tracking-widest mb-6 border-b border-slate-700 pb-2">
            <i class="fas fa-crosshairs text-red-500 mr-2"></i> Combate
          </h3>
          <div class="flex justify-around items-center text-center py-4">
             <div>
                <div class="text-2xl font-bold text-green-400"><%= stats.total_kills %></div>
                <div class="text-xs text-slate-500 uppercase">Kills</div>
             </div>
             <div class="text-2xl text-slate-600 font-light">/</div>
             <div>
                <div class="text-2xl font-bold text-red-400"><%= stats.total_deaths %></div>
                <div class="text-xs text-slate-500 uppercase">Deaths</div>
             </div>
             <div class="text-2xl text-slate-600 font-light">/</div>
             <div>
                <div class="text-2xl font-bold text-yellow-400"><%= stats.total_assists %></div>
                <div class="text-xs text-slate-500 uppercase">Assists</div>
             </div>
          </div>
        </div>

        <div class="bg-slate-800 rounded-xl p-6 border border-slate-700">
          <h3 class="text-white font-bold uppercase tracking-widest mb-6 border-b border-slate-700 pb-2">
            <i class="fas fa-trophy text-yellow-500 mr-2"></i> Mejores Campeones
          </h3>
          
          <div class="space-y-4">
            <% if (topChampions && topChampions.length > 0) { %>
              <% topChampions.forEach((champ, index) => { %>
                <div class="flex items-center gap-4 bg-slate-900/50 p-3 rounded-lg border border-slate-700">
                  <div class="w-8 h-8 flex items-center justify-center font-black text-slate-600 italic">
                    #<%= index + 1 %>
                  </div>
                  <div class="flex-1">
                    <div class="text-white font-bold"><%= champ.champion_name %></div>
                    <div class="text-xs text-slate-500"><%= champ.juegos %> partidas</div>
                  </div>
                  <% const champWr = ((Number(champ.victorias) / Number(champ.juegos)) * 100).toFixed(0); %>
                  <div class="text-right">
                    <div class="<%= champWr >= 50 ? 'text-green-400' : 'text-red-400' %> font-bold"><%= champWr %>% WR</div>
                    <div class="text-xs text-yellow-500 font-bold">KDA <%= parseFloat(champ.kda).toFixed(2) %></div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <div class="text-center py-8 text-slate-500 text-sm">Sin datos de campeones aún.</div>
            <% } %>
          </div>
        </div>

      </div>

    <% } else { %>
      <div class="bg-slate-800 rounded-xl p-12 text-center border border-slate-700">
        <div class="bg-slate-900/50 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-chart-bar text-3xl text-slate-600"></i>
        </div>
        <h3 class="text-xl font-bold text-white">Debut Pendiente</h3>
        <p class="text-slate-400 mt-2">Este jugador aún no ha disputado partidas oficiales en el torneo.</p>
      </div>
    <% } %>

    <div class="text-center">
      <a href="javascript:history.back()" class="text-slate-500 hover:text-white transition flex items-center justify-center gap-2">
        <i class="fas fa-arrow-left"></i> Volver atrás
      </a>
    </div>

  </div>
</main>

<%- include('partials/footer') %>