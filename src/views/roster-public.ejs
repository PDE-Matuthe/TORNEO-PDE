<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="container mt-5">
  
  <div class="card bg-dark text-white mb-4 border-warning">
    <div class="card-body d-flex align-items-center">
      <img src="<%= equipo.logo_url || 'https://via.placeholder.com/150' %>" 
           style="width: 80px; height: 80px; object-fit: cover;" 
           class="rounded-circle me-3 border border-2 border-warning">
      <div>
        <h2 class="mb-0"><%= equipo.nombre %></h2>
        <span class="badge bg-secondary"><%= equipo.region %></span>
      </div>
      <div class="ms-auto">
        <a href="/equipos" class="btn btn-outline-light">Volver a Equipos</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card bg-light">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Plantilla - <%= equipo.nombre %></h5>
        </div>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-dark">
              <tr>
                <th>Rol</th>
                <th>Posición</th>
                <th>Invocador</th>
                <th>Rango</th>
              </tr>
            </thead>
            <tbody>
              <% if (jugadores && jugadores.length > 0) { %>
                <% jugadores.forEach(jugador => { %>
                  <tr>
                    <td>
                      <% if (jugador.tipo_rol === 'TITULAR') { %>
                        <span class="badge bg-success">Titular</span>
                      <% } else if (jugador.tipo_rol === 'SUPLENTE') { %>
                        <span class="badge bg-warning text-dark">Suplente</span>
                      <% } else if (jugador.tipo_rol === 'COACH') { %>
                        <span class="badge bg-info">Coach</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (jugador.rol_juego) { %>
                        <span class="badge bg-secondary"><%= jugador.rol_juego %></span>
                      <% } else { %>
                        <span class="text-secondary">—</span>
                      <% } %>
                    </td>
                    <td class="fw-bold"><%= jugador.nombre %></td>
                    <td><%= jugador.rango || '—' %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center text-secondary">
                    Este equipo aún no tiene jugadores registrados
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
