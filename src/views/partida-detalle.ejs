<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold mb-2">
      <i class="fas fa-gamepad text-gold mr-3"></i>Detalles de Partida
    </h1>
    <p class="text-slate-400">Estadísticas y análisis de la partida</p>
  </div>

  <% if (typeof partida !== 'undefined' && partida) { %>
    <!-- Partida Header -->
    <div class="bg-slate-800 rounded-lg p-6 border border-slate-700 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Equipo Azul -->
        <div class="text-center">
          <img src="<%= partida.azul_logo %>" alt="<%= partida.azul_nombre %>" class="h-20 w-20 object-contain mx-auto mb-3">
          <h2 class="text-2xl font-bold text-white"><%= partida.azul_nombre %></h2>
        </div>

        <!-- Resultado -->
        <div class="flex flex-col items-center justify-center">
          <% if (partida.ganador_id) { %>
            <div class="text-center">
              <p class="text-5xl font-bold text-green-400 mb-2"><%= partida.azul_kills %>-<%= partida.rojo_kills %></p>
              <p class="text-slate-400 text-sm">FINALIZADO</p>
              <% if (partida.azul_kills > partida.rojo_kills) { %>
                <p class="text-gold font-bold mt-2"><i class="fas fa-trophy"></i> <%= partida.azul_nombre %> Gana</p>
              <% } else { %>
                <p class="text-gold font-bold mt-2"><i class="fas fa-trophy"></i> <%= partida.rojo_nombre %> Gana</p>
              <% } %>
            </div>
          <% } else { %>
            <p class="text-slate-400 font-bold text-xl">VS</p>
            <p class="text-slate-500 text-sm mt-2">
              <%= new Date(partida.fecha_partida).toLocaleDateString('es-ES', { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </p>
          <% } %>
        </div>

        <!-- Equipo Rojo -->
        <div class="text-center">
          <img src="<%= partida.rojo_logo %>" alt="<%= partida.rojo_nombre %>" class="h-20 w-20 object-contain mx-auto mb-3">
          <h2 class="text-2xl font-bold text-white"><%= partida.rojo_nombre %></h2>
        </div>
      </div>

      <!-- Partida Info -->
      <div class="mt-6 pt-6 border-t border-slate-600 grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <p class="text-slate-400 text-xs uppercase mb-1">Fase</p>
          <p class="font-bold text-white"><%= partida.fase_torneo %></p>
        </div>
        <div>
          <p class="text-slate-400 text-xs uppercase mb-1">Duración</p>
          <p class="font-bold text-white"><%= partida.duracion_minutos || 'N/A' %> min</p>
        </div>
        <div>
          <p class="text-slate-400 text-xs uppercase mb-1">Fecha</p>
          <p class="font-bold text-white text-sm">
            <%= new Date(partida.fecha_partida).toLocaleDateString('es-ES') %>
          </p>
        </div>
        <div>
          <p class="text-slate-400 text-xs uppercase mb-1">Estado</p>
          <% if (partida.ganador_id) { %>
            <p class="font-bold text-green-400">Completada</p>
          <% } else { %>
            <p class="font-bold text-yellow-400">Pendiente</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Estadísticas por Jugador -->
    <% if (typeof stats !== 'undefined' && stats && stats.length > 0) { %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Equipo Azul Stats -->
        <div>
          <h3 class="text-xl font-bold text-white mb-4 border-b border-blue-600 pb-2">
            <i class="fas fa-users text-blue-400 mr-2"></i><%= partida.azul_nombre %>
          </h3>
          
          <div class="space-y-3">
            <% stats.filter(s => s.equipo_id === partida.azul_id).forEach(player => { %>
              <div class="bg-slate-800 rounded p-4 border border-slate-700 hover:border-blue-600 transition">
                <div class="flex items-center justify-between mb-3">
                  <div>
                    <h4 class="font-bold text-white"><%= player.nombre_invocador %></h4>
                    <p class="text-xs text-slate-400"><%= player.champion_name %></p>
                  </div>
                  <div class="text-right">
                    <% if (player.win) { %>
                      <span class="text-green-400 font-bold text-sm"><i class="fas fa-check"></i> Victoria</span>
                    <% } else { %>
                      <span class="text-red-400 font-bold text-sm"><i class="fas fa-times"></i> Derrota</span>
                    <% } %>
                  </div>
                </div>
                
                <div class="grid grid-cols-4 gap-2 text-center text-sm mb-2">
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">K</p>
                    <p class="font-bold text-green-400"><%= player.kills %></p>
                  </div>
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">D</p>
                    <p class="font-bold text-red-400"><%= player.deaths %></p>
                  </div>
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">A</p>
                    <p class="font-bold text-gold"><%= player.assists %></p>
                  </div>
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">KDA</p>
                    <% const kda = (player.deaths > 0) ? ((player.kills + player.assists) / player.deaths).toFixed(2) : (player.kills + player.assists); %>
                    <p class="font-bold text-yellow-400"><%= kda %></p>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-2 text-xs text-slate-400">
                  <div>CS: <span class="text-white font-bold"><%= parseFloat(player.cs_min).toFixed(1) %></span>/min</div>
                  <div>Dmg: <span class="text-white font-bold"><%= parseFloat(player.dmg_min).toFixed(0) %></span>/min</div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>

        <!-- Equipo Rojo Stats -->
        <div>
          <h3 class="text-xl font-bold text-white mb-4 border-b border-red-600 pb-2">
            <i class="fas fa-users text-red-400 mr-2"></i><%= partida.rojo_nombre %>
          </h3>
          
          <div class="space-y-3">
            <% stats.filter(s => s.equipo_id === partida.rojo_id).forEach(player => { %>
              <div class="bg-slate-800 rounded p-4 border border-slate-700 hover:border-red-600 transition">
                <div class="flex items-center justify-between mb-3">
                  <div>
                    <h4 class="font-bold text-white"><%= player.nombre_invocador %></h4>
                    <p class="text-xs text-slate-400"><%= player.champion_name %></p>
                  </div>
                  <div class="text-right">
                    <% if (player.win) { %>
                      <span class="text-green-400 font-bold text-sm"><i class="fas fa-check"></i> Victoria</span>
                    <% } else { %>
                      <span class="text-red-400 font-bold text-sm"><i class="fas fa-times"></i> Derrota</span>
                    <% } %>
                  </div>
                </div>
                
                <div class="grid grid-cols-4 gap-2 text-center text-sm mb-2">
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">K</p>
                    <p class="font-bold text-green-400"><%= player.kills %></p>
                  </div>
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">D</p>
                    <p class="font-bold text-red-400"><%= player.deaths %></p>
                  </div>
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">A</p>
                    <p class="font-bold text-gold"><%= player.assists %></p>
                  </div>
                  <div class="bg-slate-700/50 rounded p-2">
                    <p class="text-slate-400 text-xs">KDA</p>
                    <% const kda = (player.deaths > 0) ? ((player.kills + player.assists) / player.deaths).toFixed(2) : (player.kills + player.assists); %>
                    <p class="font-bold text-yellow-400"><%= kda %></p>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-2 text-xs text-slate-400">
                  <div>CS: <span class="text-white font-bold"><%= parseFloat(player.cs_min).toFixed(1) %></span>/min</div>
                  <div>Dmg: <span class="text-white font-bold"><%= parseFloat(player.dmg_min).toFixed(0) %></span>/min</div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="bg-slate-800 rounded-lg p-8 text-center border border-slate-700">
        <i class="fas fa-chart-bar text-slate-600 text-4xl mb-3"></i>
        <p class="text-slate-400">No hay estadísticas disponibles para esta partida</p>
      </div>
    <% } %>

    <!-- Back Button -->
    <div class="mt-8">
      <a href="/calendario" class="inline-flex items-center gap-2 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded transition">
        <i class="fas fa-arrow-left"></i> Volver al Calendario
      </a>
    </div>

  <% } else { %>
    <div class="bg-slate-800 rounded-lg p-8 text-center border border-slate-700">
      <i class="fas fa-exclamation-circle text-red-400 text-4xl mb-3"></i>
      <p class="text-red-400">Partida no encontrada</p>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>
