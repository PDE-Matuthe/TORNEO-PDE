<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="hero-section">
  <div class="container">
    <h1>üè¢ Equipos Inscritos</h1>
    <p class="lead">Conoce todos los equipos participantes del torneo</p>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <% if (equipos.length > 0) { %>
      <% equipos.forEach(equipo => { %>
        <div class="col-md-4 mb-4">
          <div class="card card-custom h-100">
            <div class="card-body text-center">
              <img src="<%= equipo.logo_url || 'https://via.placeholder.com/150?text=No+Logo' %>" 
                   alt="Logo <%= equipo.nombre %>" 
                   class="rounded-circle mb-3" 
                   style="width: 100px; height: 100px; object-fit: cover; border: 4px solid #f4e9a8;">
              
              <h3 class="card-title mb-3"><%= equipo.nombre %></h3>
              <span class="badge mb-2"><%= equipo.region %></span>
              
              <div class="mt-4">
                <a href="/equipos/<%= equipo.id %>/jugadores" class="btn btn-custom w-100">
                  Ver Roster
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <div class="alert alert-warning" style="margin-top: 3rem;">
          <h3>No hay equipos registrados a√∫n.</h3>
          <p class="mt-2">Por favor, contacta al administrador.</p>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
