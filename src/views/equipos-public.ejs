<%- include('partials/head') %>
<%- include('partials/nav') %>

<main class="max-w-7xl mx-auto px-4 py-12">

  <div class="text-center mb-16 relative">
    <h1 class="text-5xl md:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-b from-yellow-300 to-yellow-700 uppercase italic tracking-tighter drop-shadow-sm">
      Nuestros Equipos
    </h1>
    <p class="text-slate-400 text-lg mt-2 font-light tracking-widest uppercase">
      Conoce a los protagonistas de la grieta
    </p>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-yellow-500/10 blur-[100px] -z-10 rounded-full"></div>
  </div>

  <% if (equipos && equipos.length > 0) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-y-12 gap-x-8">
      
      <% equipos.forEach(equipo => { %>
        <a href="/equipos/<%= equipo.id %>" class="group relative block h-80 w-full mx-auto max-w-sm cursor-pointer perspective-1000">
          
          <div class="absolute inset-0 bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 
                      transform -skew-x-6 rounded-xl shadow-2xl transition-all duration-500 ease-out
                      group-hover:border-yellow-500 group-hover:shadow-[0_0_30px_rgba(234,179,8,0.3)] 
                      group-hover:-translate-y-2 group-hover:scale-105">
          </div>

          <div class="relative h-full flex flex-col items-center justify-center p-6 z-10">
            
            <div class="relative w-40 h-40 mb-4 transition-transform duration-500 ease-out group-hover:scale-110 group-hover:-translate-y-4">
              <div class="absolute inset-0 bg-black/50 blur-xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              
              <img src="<%= equipo.logo_url || 'https://via.placeholder.com/150' %>" 
                   alt="<%= equipo.nombre %>" 
                   class="w-full h-full object-contain drop-shadow-lg 
                          filter grayscale group-hover:grayscale-0 transition-all duration-500">
            </div>

            <div class="text-center opacity-0 transform translate-y-4 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
              <h2 class="text-2xl font-black text-white uppercase tracking-tighter italic">
                <%= equipo.nombre %>
              </h2>
              <span class="inline-block mt-2 px-3 py-1 bg-yellow-500 text-black text-xs font-bold rounded uppercase tracking-widest shadow-lg">
                <%= equipo.siglas %>
              </span>
            </div>

          </div>

          <div class="absolute top-0 right-0 p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
             <i class="fas fa-external-link-alt text-yellow-500 text-xl transform -skew-x-6"></i>
          </div>

        </a>
      <% }) %>

    </div>
  <% } else { %>
    <div class="text-center py-20 opacity-50">
      <i class="fas fa-users-slash text-6xl text-slate-700 mb-4"></i>
      <h3 class="text-2xl font-bold text-slate-500">AÃºn no hay equipos registrados.</h3>
    </div>
  <% } %>

</main>

<%- include('partials/footer') %>